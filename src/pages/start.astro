import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Start',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Start"
    image={{
      src: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40',
      alt: 'Two laptops and hands',
    }}
  >
    <Fragment slot="title">
      Let's start working together
    </Fragment>

    <Fragment slot="subtitle">
      Starting on your project or examining your ideas is simple. We need to understand your needs and goals. We will help you to define the best strategy and the best way to achieve your goals. But all starts with a call.
    </Fragment>
  </Hero>

  <Hero
    tagline="Schedule a call"
  >
    <Fragment slot="title">
      Book a call to get started
    </Fragment>

    <Fragment slot="subtitle">
      <div class="tidycal-embed" data-path="zeljko/introduction"></div>
      <script src="https://assets.tidycal.com/js/embed.js" async></script>
    </Fragment>
  </Hero>

